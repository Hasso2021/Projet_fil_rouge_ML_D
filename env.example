# API Configuration
API_TITLE=AI Creative Studio
API_VERSION=1.0.0
API_HOST=0.0.0.0
API_PORT=8000

# Stable Diffusion
# Modèles recommandés (du plus puissant au standard):
# - lykon/dreamshaper-8 (RECOMMANDÉ - Excellent pour art, compatible SD 1.5, ~4GB)
# - SG161222/Realistic_Vision_V5.1_noVAE (Photoréaliste, ~4GB)
# - runwayml/stable-diffusion-v1-5 (Standard, ~4GB)
# - stabilityai/stable-diffusion-xl-base-1.0 (SDXL - Ultra puissant mais ~13GB, nécessite plus de RAM)
SD_MODEL_ID=lykon/dreamshaper-8
SD_DEVICE=cpu
SD_DTYPE=float32  # float32 recommandé pour CPU (plus stable que float16)

# RL Agent
RL_AGENT_PATH=models/rl_agent.zip
RL_USE_AGENT=true

# Generation Defaults
DEFAULT_GUIDANCE_SCALE=7.5
DEFAULT_NUM_STEPS=50
DEFAULT_WIDTH=512
DEFAULT_HEIGHT=512

# Paths
OUTPUT_DIR=outputs
MODELS_DIR=models

# Database
DATABASE_URL=sqlite:///./data/ai_creative_studio.db

